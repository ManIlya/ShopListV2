<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>
<HBox xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.shoplistv2.ShopListController" spacing="10">
    <padding>
        <Insets top="10" left="10" bottom="10" right="10"/>
    </padding>
    <ListView fx:id="shopListView" VBox.vgrow="ALWAYS"/>
    <VBox spacing="10">
        <TextField fx:id="addShopItemTextField"/>
        <Button text="Add Task" onAction="#addItem"/>
        <Button text="Delete Task" onAction="#deleteItem"/>
    </VBox>
</HBox>